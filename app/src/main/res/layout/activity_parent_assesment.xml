<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.riskfall.detector.Parent_assesment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/textpatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Parent Assessment"
            android:textColor="@color/putih"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riwayat Jatuh" />

            <RadioGroup
                android:id="@+id/soal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal1a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ya"/>

                <RadioButton
                    android:id="@+id/soal1b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/abu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnosis Sekunder" />

            <RadioGroup
                android:id="@+id/soal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ya"/>

                <RadioButton
                    android:id="@+id/soal2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meggunakan Alat Bantu" />

            <RadioGroup
                android:id="@+id/soal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal13a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak Ada/Kursi Roda/Bedrest/Diabntu Perawat"/>

                <RadioButton
                    android:id="@+id/soal3b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kruk/Tongkat"/>

                <RadioButton
                    android:id="@+id/soal3c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berpegangan Prabot"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/abu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menggunakan Infus, Heparin/Pengencer Darah" />

            <RadioGroup
                android:id="@+id/soal4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal4a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ya"/>

                <RadioButton
                    android:id="@+id/soal4b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaya Berjalan" />

            <RadioGroup
                android:id="@+id/soal5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal5a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Normal/Tirah Baring/Imobilisasi"/>

                <RadioButton
                    android:id="@+id/soal5b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lemah"/>

                <RadioButton
                    android:id="@+id/soal5c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terganggu"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/abu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Mental" />

            <RadioGroup
                android:id="@+id/soal6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal6a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Menyadari Kemampuan"/>

                <RadioButton
                    android:id="@+id/soal6b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lupa/Pelupa"/>

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_marginVertical="21dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/putih"
            android:text="Analyze"
            android:textColor="@color/tombol"/>
    </LinearLayout>


</ScrollView>
