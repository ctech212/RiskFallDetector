<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.riskfall.detector.pediatri_assesment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/textpatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Pediatri Assessment"
            android:textColor="@color/putih"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usia" />

            <RadioGroup
                android:id="@+id/soal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal1b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=".3-7 Tahun"/>

                <RadioButton
                    android:id="@+id/soal1c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=".7-13 Tahun"/>

                <RadioButton
                    android:id="@+id/soal1d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=".>= 13 Tahun"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/abu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin" />

            <RadioGroup
                android:id="@+id/soal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"/>

                <RadioButton
                    android:id="@+id/soal2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnosis" />

            <RadioGroup
                android:id="@+id/soal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal13a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis Neurologi"/>

                <RadioButton
                    android:id="@+id/soal3b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perubahan Oksigenasi(Diagnosis Respiratorik,Dehidrasi,Anemia,Pusing,dan Sebagainya"/>

                <RadioButton
                    android:id="@+id/soal3c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gangguan Perilaku/Psikiatrik"/>

                <RadioButton
                    android:id="@+id/soal3d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis Lainnya"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/abu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gangguan Kognitif" />

            <RadioGroup
                android:id="@+id/soal4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal4a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak Menyadari Keterbatasan Dirinya"/>

                <RadioButton
                    android:id="@+id/soal4b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lupa akan Keterbatasan"/>

                <RadioButton
                    android:id="@+id/soal4c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orientasi Baik Terhadap Dirinya"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/abu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respon Terhadap: Pembedahan/Sedasi/Anastesi" />

            <RadioGroup
                android:id="@+id/soal6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal6a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dalam 24 Jam"/>

                <RadioButton
                    android:id="@+id/soal6b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dalam 48 Jam"/>

                <RadioButton
                    android:id="@+id/soal6c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="> 48 Jam atau Tidak menjalani Pembedahan/sedasi/Anastesi"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faktor Lingkungan" />

            <RadioGroup
                android:id="@+id/soal5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal5a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Jatuh/Bayi Diletakkan di Tempat Tidur Dewasa"/>

                <RadioButton
                    android:id="@+id/soal5b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasien Menggunakan Alat Bantu/Bayi Diletakkan dalam Tempat Tidur Bayi/Perabot Rumah"/>

                <RadioButton
                    android:id="@+id/soal5c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasien Ditempatkan dalam Tempat Tidur "/>

                <RadioButton
                    android:id="@+id/soal5d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Area di Luar Rumah Sakit"/>

            </RadioGroup>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respon Terhadap: Penggunaan Medikomentosa" />

            <RadioGroup
                android:id="@+id/soal7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/soal7a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penggunaan Multiple: Sedatif, Obat Hipnotis, Barbiturat, Fenotiazin, Anti Depresan, Pencahar, Diuretik, Narkose"/>

                <RadioButton
                    android:id="@+id/soal7b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penggunaan Salah Satu Obat Diatas"/>

                <RadioButton
                    android:id="@+id/soal7c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penggunaan Medikasi Lainnya/Tidak ada Medikasi"/>

            </RadioGroup>

        </LinearLayout>


        <Button
            android:id="@+id/buttonSubmit"
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/putih"
            android:text="Analyze"
            android:textColor="@color/tombol"/>
    </LinearLayout>


</ScrollView>
